<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource" android:orientation="vertical" android:layout_centerVertical="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="45dp"
        android:layout_width="92.5dp"
        android:src="@drawable/quiz"
        android:contentDescription="logoGame"
        android:id="@+id/quiz"/>

    <TextView
        android:id="@+id/creationCarte"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:text="@string/page_creation_card"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/poserQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creationCarte"
        android:text="@string/enter_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/buttonimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poserQuestion"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-33dp"
        android:onClick="importerImage"
        android:text="Importer image" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="190dp"
        android:layout_height="141dp"
        android:layout_below="@+id/buttonimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/ajouterReponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginTop="20dp"
        android:text="@string/add_answer"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ajouterReponse"
        android:layout_marginTop="0dp"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/checkAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer1"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer1"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/checkAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer2"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer2"
        android:layout_marginTop="0dp"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/checkAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3"
        android:layout_marginTop="0dp"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer3"
        android:layout_centerVertical="false"
        android:layout_marginTop="0dp"
        android:text="@string/jouer" />


</RelativeLayout>