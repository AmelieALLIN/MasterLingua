<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreerCarteQuestionSon" >


    <ImageView android:layout_height="45dp"
        android:layout_width="92.5dp"
        android:src="@drawable/quiz"
        android:contentDescription="logoGame"
        android:id="@+id/quiz"/>

    <TextView
        android:id="@+id/creationCarte"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:text="@string/page_creation_card"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creationCarte"
        android:text="@string/enter_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    <ImageView
        android:id="@+id/micImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@android:drawable/presence_audio_online" />

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/micImage"
        android:id="@+id/linear1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="0dp"

            android:text="start" />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:enabled="false"
            android:text="stop" />

    </LinearLayout>

    <LinearLayout  android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:layout_marginLeft="180dp"
        android:layout_alignRight="@+id/linear1"
        android:id="@+id/linear2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:enabled="false"
            android:text="play" />

        <Button
            android:id="@+id/stopPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_marginLeft="0dp"
            android:text="stop playing" />
    </LinearLayout>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingDefaultResource" android:orientation="vertical" android:layout_centerVertical="true" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/linear1">



        <TextView
            android:id="@+id/ajouterReponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="20dp"
            android:text="@string/add_answer"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ajouterReponse"
            android:layout_marginTop="0dp"
            android:autofillHints="username"
            android:inputType="textAutoCorrect"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer1"
            android:checked="false"
            android:onClick="onCheckBoxClicked"
            android:text="@string/vrai"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="409dp" />

        <EditText
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkAnswer1"
            android:autofillHints="username"
            android:inputType="textAutoCorrect"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer2"
            android:checked="false"
            android:onClick="onCheckBoxClicked"
            android:text="@string/vrai"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="409dp" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkAnswer2"
            android:layout_marginTop="0dp"
            android:autofillHints="username"
            android:inputType="textAutoCorrect"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/checkAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer3"
            android:layout_marginTop="0dp"
            android:checked="false"
            android:onClick="onCheckBoxClicked"
            android:text="@string/vrai"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="409dp" />

        <Button
            android:id="@+id/validate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkAnswer3"
            android:layout_centerVertical="false"
            android:layout_marginTop="0dp"
            android:text="@string/jouer" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="286dp"
            android:text="@string/terminate" />





    </RelativeLayout>

</RelativeLayout>