<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:foregroundTint="#7D97CA"
    android:orientation="vertical"
    tools:context=".ChoisirCreationCarte">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/imageCreerCarte"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foreground="@android:drawable/ic_menu_add"
            android:outlineAmbientShadowColor="#FFFFFF"/>

        <Button
            android:id="@+id/goCreerCarte"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/gradient"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="clip_horizontal|center|clip_vertical"
            android:onClick="goCreerCarte"
            android:text="@string/creation_card"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="198dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonListCarte"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/goCreerCarte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center|clip_vertical|center_horizontal"
        android:onClick="AfficherListe"
        android:text="Afficher Liste Carte"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/buttonCreationDeck"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonListCarte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center|center_horizontal"
        android:onClick="CreationDeck"
        android:text="CrÃ©er un deck"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="500dp" />

    <Button
        android:id="@+id/buttonListDeck"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonCreationDeck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center|center_horizontal"
        android:onClick="AfficherListeDeck"
        android:text="Afficher Liste Deck"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="500dp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/buttonListDeck"
        android:layout_marginTop="14dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center|center_horizontal"
        android:onClick="afficherListeQuestionImage"
        android:text="Afficher Liste Images"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="500dp" />

</LinearLayout>