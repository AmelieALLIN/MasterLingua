<RelativeLayout tools:ignore="MissingDefaultResource"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/creationCarte"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/page_creation_card"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creationCarte"
        android:autofillHints="username"
        android:fontFamily="@font/montserrat_alternates"
        android:hint="Veuillez indiquer votre question"
        android:inputType="textAutoCorrect|textCapSentences"
        android:visibility="visible" />


    <Button
        android:id="@+id/buttonimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/montserrat_alternates"
        android:onClick="importerImage1"
        android:text="@string/importer"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/question"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/checkAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:checked="false"
        android:fontFamily="@font/montserrat_alternates"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/buttonimage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/montserrat_alternates"
        android:onClick="importerImage2"
        android:text="@string/importer" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/checkAnswer1"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/checkAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image2"
        android:checked="false"
        android:fontFamily="@font/montserrat_alternates"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/buttonimage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="130dp"
        android:fontFamily="@font/montserrat_alternates"
        android:onClick="importerImage3"
        android:text="@string/importer" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/checkAnswer2"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/checkAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image3"
        android:checked="false"
        android:fontFamily="@font/montserrat_alternates"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/retour"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer3"
        android:layout_centerVertical="false"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/terminate" />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer3"
        android:layout_centerVertical="false"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/jouer"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />


</RelativeLayout>