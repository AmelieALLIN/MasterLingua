<RelativeLayout tools:ignore="MissingDefaultResource"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <EditText
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creationCarte"
        android:autofillHints="username"
        android:hint="Veuillez indiquer votre question"
        android:inputType="textAutoCorrect|textCapSentences"
        android:visibility="visible" />


    <Button
        android:id="@+id/buttonimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ajouterReponse"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="103dp"
        android:onClick="importerImage1"
        android:text="Importer image 1" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonimage1"
        android:layout_marginTop="-32dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/checkAnswer1"
        android:layout_below="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/buttonimage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="103dp"
        android:onClick="importerImage2"
        android:text="Importer image 2" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonimage2"
        android:layout_marginTop="-19dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/checkAnswer2"
        android:layout_below="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/buttonimage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-23dp"
        android:layout_marginRight="102dp"
        android:onClick="importerImage3"
        android:text="Importer image 3" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_below="@+id/buttonimage3"
        android:layout_marginTop="-32dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/checkAnswer3"
        android:layout_below="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/retour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer3"
        android:layout_centerVertical="false"
        android:layout_marginTop="16dp"
        android:text="@string/terminate" />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retour"
        android:layout_centerVertical="false"
        android:layout_marginTop="17dp"
        android:text="@string/jouer" />


</RelativeLayout>