<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/quiz"
        android:layout_width="92.5dp"
        android:layout_height="45dp"
        android:contentDescription="logoGame"
        android:src="@drawable/quiz"></ImageView>

    <TextView
        android:id="@+id/creationCarte"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/quiz"
        android:layout_centerHorizontal="true"
        android:text="@string/page_creation_card"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"></TextView>

    <TextView
        android:id="@+id/poserQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creationCarte"
        android:text="@string/enter_question"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"></TextView>

    <EditText
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poserQuestion"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible"></EditText>

    <TextView
        android:id="@+id/ajouterReponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question"
        android:text="@string/add_answer"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"></TextView>

    <EditText
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ajouterReponse"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible"></EditText>

    <CheckBox
        android:id="@+id/checkAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer1"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer1"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible"></EditText>

    <CheckBox
        android:id="@+id/checkAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer2"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer2"
        android:autofillHints="username"
        android:inputType="textAutoCorrect"
        android:visibility="visible"></EditText>

    <CheckBox
        android:id="@+id/checkAnswer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer3"
        android:checked="false"
        android:onClick="onCheckBoxClicked"
        android:text="@string/vrai"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="409dp" />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkAnswer3"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:text="@string/terminate" />

</RelativeLayout>